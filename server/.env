# General Application Settings
# NODE_ENV=development
PORT=5000
# APP_NAME=HappiHub

# Database Configuration
MONGO_URI=mongodb://mongo:27017/happihub
# MONGO_USER=your_mongo_user
# MONGO_PASSWORD=your_mongo_password
# MONGO_DB_NAME=happihub

# JWT (JSON Web Token) Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=3600 # Token expiration time in seconds (e.g., 1 hour)
# JWT_ISSUER=happihub
# JWT_AUDIENCE=happihub_users

# Redis Configuration
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password # Uncomment if your Redis instance requires a password

# Email Configuration (Optional)
# EMAIL_HOST=smtp.mailtrap.io
# EMAIL_PORT=2525
# EMAIL_USER=your_email_user
# EMAIL_PASS=your_email_password
# EMAIL_FROM=no-reply@happihub.com

# OAuth / Social Login (Optional)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# FACEBOOK_APP_ID=your_facebook_app_id
# FACEBOOK_APP_SECRET=your_facebook_app_secret

# S3 / File Storage (Optional)
# S3_BUCKET_NAME=your_s3_bucket_name
# S3_ACCESS_KEY_ID=your_s3_access_key_id
# S3_SECRET_ACCESS_KEY=your_s3_secret_access_key
# S3_REGION=your_s3_region

# Logging
# LOG_LEVEL=info
# LOG_DIR=./logs

# Application URLs
# CLIENT_URL=http://localhost:3000
# SERVER_URL=http://localhost:5000

# Security Configuration
# RATE_LIMIT_WINDOW_MS=60000 # Time window in milliseconds
# RATE_LIMIT_MAX_REQUESTS=100 # Max number of requests per window per IP

# Payment Gateway Configuration (Optional)
# STRIPE_SECRET_KEY=your_stripe_secret_key
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# API Keys (Optional)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# SENDGRID_API_KEY=your_sendgrid_api_key

# Feature Flags (Optional)
# FEATURE_X_ENABLED=true
# FEATURE_Y_ENABLED=false

# Debugging and Development Tools
# DEBUG=happihub:*
# VERBOSE_LOGGING=true

# CORS Configuration
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
# CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
# CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Session Management
# SESSION_SECRET=your_session_secret
# SESSION_EXPIRATION=3600000 # Session expiration time in milliseconds (e.g., 1 hour)

# Additional Production Configuration
# Uncomment and set appropriate values for production
# NODE_ENV=production
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/happihub
# CLIENT_URL=https://your-production-client-url.com
# SERVER_URL=https://your-production-server-url.com
# REDIS_HOST=your_production_redis_host
# REDIS_PORT=your_production_redis_port
# REDIS_PASSWORD=your_production_redis_password
# EMAIL_HOST=smtp.your-production-email.com
# EMAIL_PORT=587
# EMAIL_USER=your_production_email_user
# EMAIL_PASS=your_production_email_password
# S3_BUCKET_NAME=your_production_s3_bucket_name
# S3_ACCESS_KEY_ID=your_production_s3_access_key_id
# S3_SECRET_ACCESS_KEY=your_production_s3_secret_access_key
# S3_REGION=your_production_s3_region
# STRIPE_SECRET_KEY=your_production_stripe_secret_key
# PAYPAL_CLIENT_ID=your_production_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_production_paypal_client_secret
